<?xml version="1.0" encoding="utf-8"?>
<configuration xmlns:urn="urn:schemas-microsoft-com:asm.v1" xmlns:xdt="http://schemas.microsoft.com/XML-Document-Transform">
  <xdt:Import assembly="ComponentHost" namespace="ComponentHost.Transforms"/>
  
  <appSettings xdt:Transform="InsertIfMissing">

    <add key="Feature.Webhooks.Sitecore.Enabled"                          value="true" xdt:Locator="Condition(@key='Feature.Webhooks.Sitecore.Enabled')" xdt:Transform="Replace"/>

    <add key="Providers.SitecoreClientId"                                 value="" xdt:Locator="Condition(@key='Providers.SitecoreClientId')" xdt:Transform="Replace"/>
    <add key="Providers.SitecoreClientSecret"                             value="_value_" xdt:Locator="Condition(@key='Providers.SitecoreClientSecret')" xdt:Transform="Replace"/>

  </appSettings>

</configuration>

